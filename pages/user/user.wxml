<scroll-view scroll-y class="scrollPage">
  <view class="UCenter-bg">
    <image src="{{userInfo.avatarUrl}}" class="png" mode="widthFix"></image>
    <view class="text-xl margin-top-sm">{{userInfo.nickName}}</view>
    <image src="https://raw.githubusercontent.com/weilanwl/ColorUI/master/demo/images/wave.gif" mode="scaleToFill" class="gif-wave"></image>
  </view>
  <view class="padding flex text-center text-grey bg-white shadow-warp">
    <view class="flex flex-sub flex-direction solid-right">
      <view class="text-xxl text-orange">11</view>
      <view class="margin-top-sm">
        <text class="cuIcon-creativefill"></text> 答题总数</view>
    </view>
    <view class="flex flex-sub flex-direction solid-right">
      <view class="text-xxl text-blue">11</view>
      <view class="margin-top-sm">
        <text class="cuIcon-discoverfill"></text> 出题总数</view>
    </view>
    <view class="flex flex-sub flex-direction">
      <view class="text-xxl text-green">11</view>
      <view class="margin-top-sm">
        <text class="cuIcon-selectionfill"></text> 证书总数</view>
    </view>
  </view>
  <view class="cu-list menu card-menu margin-top-xl margin-bottom-xl shadow-lg radius">
    <view class="cu-item arrow">
      <navigator class="content" url="/pages/question/question" hover-class="none">
        <text class="cuIcon-hotfill text-red"></text>
        <text class="text-grey">我的题</text>
      </navigator>
    </view>
    <view class="cu-item arrow">
      <navigator class="content" url="/pages/certificate/certificate" hover-class="none">
        <text class="cuIcon-selectionfill text-red"></text>
        <text class="text-grey">我的证书</text>
      </navigator>
    </view>
    <view class="cu-item arrow">
      <navigator class="content" url="/pages/about/log/log" hover-class="none">
        <text class="cuIcon-formfill text-grey"></text>
        <text class="text-grey">反馈信息</text>
      </navigator>
    </view>
  </view>
  <view class="cu-tabbar-height"></view>
</scroll-view>